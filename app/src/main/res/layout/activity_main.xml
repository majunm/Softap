<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:background="#4d000000"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="公告:"
            android:textColor="#FFD665"
            android:textSize="12dp" />

        <com.example.tst.widget.INoticeBoardView
            android:id="@+id/INoticeView22"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1.0"
            android:background="#666"
            app:INoticeBoardView_AnimTime="6000"
            app:INoticeBoardView_Direction="vertical"
            app:INoticeBoardView_Vertical_Duration_Step="10"
            app:INoticeBoardView_Vertical_OffsetX="100" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:src="@mipmap/close_style1_iv" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="26dp"
        android:layout_marginTop="50dp"
        android:background="#4d000000"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:id="@+id/INoticeView_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="公告:"
            android:textColor="#FFD665"
            android:textSize="12dp" />

        <com.example.tst.widget.INoticeBoardView
            android:id="@+id/INoticeView2"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:layout_weight="1.0"
            android:background="#484"
            app:INoticeBoardView_AnimTime="6000"
            app:INoticeBoardView_Direction="horizontal"
            app:INoticeBoardView_Vertical_Duration_Step="10"
            app:INoticeBoardView_Vertical_OffsetX="100" />

        <ImageView
            android:id="@+id/INoticeView_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="7dp"
            android:src="@mipmap/close_style1_iv" />
    </LinearLayout>

</LinearLayout>